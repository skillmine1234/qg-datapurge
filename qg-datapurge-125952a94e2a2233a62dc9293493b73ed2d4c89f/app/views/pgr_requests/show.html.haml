.form-horizontal.show_form
  .form-main-with-color{:style=>'background-color: #F1F2F8;'}
    #form-details
      %h3 Data Purge Request
      %br
      %p{:style => 'text-align:left; padding-left:6px; padding-bottom:17px'}
        - can = can? :edit, @purge_data
        = render 'approve', :@record => @purge_data
      %table.table.no-border{:style=>"table-layout: fixed; width: 100%;"}
        %tr
          %td.label Table Name
          %td.value
            = @purge_data.try(:table_name)
          %td
        - if !@purge_data.ns_day_cnt.present?  
          %tr
            %td.label Date
            %td.value
              = @purge_data.try(:to_date)
            %td
        - if @purge_data.ns_day_cnt.present?  
          %tr
            %td.label Day Count
            %td.value
              = @purge_data.try(:ns_day_cnt).capitalize
            %td  
        %tr
          %td.label Created at
          %td.value
            = @purge_data.created_at
          %td  
        %tr
          %td.label Created By
          %td.value
            = @purge_data.created_user.try(:username)
          %td
        %tr
          %td.label Updated By
          %td.value
            = @purge_data.updated_user.try(:username)
          %td  
